<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddHouseActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:onClick="BackIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graana"
            android:layout_marginLeft="40dp"
            android:textColor="@color/browser_actions_bg_grey"
            android:textSize="32sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/imvHouseImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/house_logo"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Pic"
                android:onClick="AddPic"
                android:textSize="32sp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="32sp"/>

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbarSize="32sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white">

        <EditText
            android:id="@+id/edtRent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:hint="Rent"
            android:ems="10"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
    android:id="@+id/btnLocation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Location"
        android:background="@drawable/input_design"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:textSize="32sp"/>
    <TextView
    android:id="@+id/textView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="BedRooms"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:textSize="32sp"/>

    <RadioGroup
        android:id="@+id/rdgBedOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbBed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  1"
            android:textSize="32sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rdbBed2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  2"
            android:textSize="32sp"/>

        <RadioButton
            android:id="@+id/rdbBed3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  3"
            android:textSize="32sp"/>

        <RadioButton
            android:id="@+id/rdbBed4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  4"
            android:textSize="32sp"/>
        <RadioButton
            android:id="@+id/rdbBed5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  5"
            android:textSize="32sp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WashRooms"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="32sp"/>

    <RadioGroup
        android:id="@+id/rdgBathOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbBath1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  1"
            android:textSize="32sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rdbBath2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  2"
            android:textSize="32sp"/>

        <RadioButton
            android:id="@+id/rdbBath3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  3"
            android:textSize="32sp"/>

        <RadioButton
            android:id="@+id/rdbBath4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  4"
            android:textSize="32sp"/>
        <RadioButton
            android:id="@+id/rdbBath5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="  5"
            android:textSize="32sp"/>
    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white">

        <EditText
            android:id="@+id/edtDiscreption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:hint="Discription"
            android:ems="10"/>


    </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_design"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="Add"
                android:textSize="32sp"
                android:onClick="Add"/>

        </LinearLayout>

    </ScrollView>




</LinearLayout>